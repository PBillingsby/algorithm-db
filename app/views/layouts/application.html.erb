<!DOCTYPE html>
<html>
  <head>
    <title>AlgorithmDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="pt-2">
      <ul class="nav text-center">
        <li class="block pr-3 h-8 w-auto inline-block">
          <a class="text-blue-500" href="/">Home</a>
        </li>
        <li class="block h-8 pr-3 w-auto inline-block">
          <a class="text-blue-500" href="/algorithms/new">New</a>
        </li>
        <li class="block h-8 pr-3 w-auto inline-block">
          <a class="text-blue-500" href="/articles">Articles</a>
        </li>
      </ul>
      <% if flash[:message] %>
        <div class="alert text-center <%= flash[:class] %>">
          <span onclick="this.parentElement.style.display='none';">
            &times;
          </span>
          <%= flash[:message] %>
        </div>
      <% end %>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
