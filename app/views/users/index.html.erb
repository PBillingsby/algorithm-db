<% if user_signed_in? %>
  <div class="container">
    <h4><%= current_user.username %></h4>
    <ul class="dropdown-menu pr-3 h-8 w-auto inline-block" role="menu">
      <li><%= link_to 'Profile', edit_user_registration_path %></li>
      <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li><br>
      <h1>Algorithms</h1><br>
      <% if @algorithms.count > 0 %>
        <ol>
          <% @algorithms.map do |algorithm| %>
          Creator: <%= algorithm.user.username %>
            <li><%= link_to algorithm.name, algorithm_path(algorithm) %></li>
          <% end %>
        </ol>
      <% else %>
        <%= link_to 'Add algorithm', new_algorithm_path %>
      <% end %>

  <% else %>
    <li><%= link_to 'Log In', new_user_session_path %></li>
    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  </div>
<% end %></ul>

<div class="pt-16">
  <% User.all.each do |u| %>
    <h4><%= u.username %></h4>
    <% u.get_leaderboard_data.each do |attribute, count| %>
      <p><%= attribute %>: <%= count %></p>
    <% end %>
  <% end %>
</div>
