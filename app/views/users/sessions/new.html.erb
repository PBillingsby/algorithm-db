
<div class="text-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col mx-auto mb-4 max-w-xs">
      <%= f.label :email, class: 'mb-2 text-lg text-gray-400' %>
      <%= f.input :email,
                  label: false,
                  input_html: { class: 'rounded-md' } %>
    </div>
    <div class="flex flex-col mx-auto mb-4 max-w-xs">
      <%= f.label :password, class: 'mb-2 text-lg text-gray-400' %>
      <%= f.input :password,
                  label: false,
                  input_html: { autocomplete: "current-password", class: 'rounded-md' } %>
      <%= f.input :remember_me, input_html: { class: 'mr-3' }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'submit-btn' %>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
