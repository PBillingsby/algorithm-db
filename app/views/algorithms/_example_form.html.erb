<div class="form-group w-50 mx-auto">
  <h3 class="pt-2">Add new example</h3> 
  <div class="form-group text-center">
    <%= fields_for @algorithm.examples.new do |a| %>
      <div class="form-group text-center">
        <%= a.label :example %><br>
        <%= a.text_area :example, class: 'form-control' %>
      </div>
      <div class="form-group text-center">  
        <%= a.label :language %><br>
        <%= a.select :language, options_for_select(Algorithm::LANGUAGES, "--"), class: 'form-control' %>
      </div>
    <% end %>
  </div>
  <%= submit_tag "Add new example", class: 'mt-2 submit-btn' %>
</div>