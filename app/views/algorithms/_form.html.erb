<%= simple_form_for @algorithm, html: { class: 'text-center'} do |f| %>
<div class="form-group w-50 mx-auto">
  <div class="form-group text-center">
    <%= f.simple_fields_for @algorithm.examples.new do |a| %>
      <div class="form-group text-center">
        <%= a.label :example %><br>
        <%= a.text_area :example %>
      </div>
      <div class="form-group text-center">  
        <%= a.label :language %><br>
        <%= a.select :language, options_for_select([["--", ""],"Ruby", "JavaScript" ], "--") %>
      </div>
    <% end %>
  </div>
  <%= f.submit "Add new example" %>
</div>
<% end %>